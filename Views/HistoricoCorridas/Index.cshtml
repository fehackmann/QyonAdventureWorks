@model IEnumerable<Dominio.Entity.HistoricoCorrida>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Competidor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PistaCorrida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCorrida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoGasto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtAlteracao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Competidor.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PistaCorrida.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCorrida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoGasto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtCriacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtAlteracao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>